#!/usr/bin/env bash
set -e

# Installer foreman si nécessaire
if ! command -v foreman >/dev/null 2>&1; then
  echo "Foreman introuvable. Installation..."
  gem install foreman
fi

# Par défaut port 3000
export PORT="${PORT:-3000}"

# Lancer les process définis dans Procfile.dev
exec foreman start -f Procfile.dev "$@"
