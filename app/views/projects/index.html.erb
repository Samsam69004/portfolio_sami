        <%= f.text_field :name, placeholder: "Votre nom", required: true, autocomplete: "name", class: "w-full rounded-xl border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
        <%= f.email_field :email, placeholder: "Votre email", required: true, autocomplete: "email", class: "w-full rounded-xl border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
      </div>

      <%= f.text_field :subject, placeholder: "Sujet", class: "w-full rounded-xl border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
      <%= f.text_area :message, rows: 5, required: true, placeholder: "Votre message", class: "w-full rounded-xl border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-sky-500" %>
      <%= f.text_field :website, value: "", autocomplete: "off", tabindex: -1, class: "hidden" %>

      <%= f.submit "Envoyer", class: "justify-self-center inline-flex items-center gap-2 rounded-xl bg-sky-500 px-5 py-3 text-white shadow hover:bg-sky-600 transition" %>
    <% end %>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const y = document.getElementById("year");
    if (y) y.textContent = new Date().getFullYear();

    // mini carrousel
    const root = document.querySelector("[data-carousel]");
    if (!root) return;
    const slides = [...root.querySelectorAll(".carousel-slide")];
    const dots   = [...root.querySelectorAll(".carousel-dot")];
    let i = 0, timer;

    const show = (n) => {
      i = (n + slides.length) % slides.length;
      slides.forEach((s, k) => s.classList.toggle("hidden", k !== i));
      dots.forEach((d, k) => d.classList.toggle("bg-slate-900", k === i));
      dots.forEach((d, k) => d.classList.toggle("bg-slate-300", k !== i));
    };

    root.querySelector("[data-action='prev']")?.addEventListener("click", () => show(i-1));
    root.querySelector("[data-action='next']")?.addEventListener("click", () => show(i+1));
    dots.forEach((d, k) => d.addEventListener("click", () => show(k)));

    const autoplay = root.dataset.autoplay === "true";
    const interval = Number(root.dataset.interval || 3500);
    const pauseOnHover = root.dataset.pauseOnHover === "true";

    const start = () => { if (autoplay) timer = setInterval(() => show(i+1), interval); };
    const stop  = () => { if (timer) clearInterval(timer); };

    if (pauseOnHover) {
      root.addEventListener("mouseenter", stop);
      root.addEventListener("mouseleave", start);
    }
    start();
    show(0);
  });
</script>
