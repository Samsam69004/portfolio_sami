<%# --- PRELOAD de l'image HÉRO (LCP) --- %>
<%= image_tag "sami.jpg", alt: "Sami" %>

<%# --- HERO (au-dessus du fold) --- %>
<section id="hero" class="relative overflow-hidden bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 pt-10 md:pt-14">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div class="space-y-4">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight text-slate-900">
          Développeur Web Full-Stack (Rails & Front)
        </h1>
        <p class="text-slate-600 text-lg">
          Je conçois des sites modernes, rapides et maintenables. Voici une sélection de mes projets et compétences.
        </p>
        <div class="flex items-center gap-3">
          <%= link_to "Voir mes projets", root_path(anchor: "projects"),
              data: { turbo: false },
              class: "inline-flex items-center rounded-xl bg-sky-500 px-4 py-2.5 text-white font-semibold shadow hover:bg-sky-600 transition" %>
          <%= link_to "Me contacter", root_path(anchor: "contact"),
              data: { turbo: false },
              class: "inline-flex items-center rounded-xl border border-slate-300 px-4 py-2.5 font-semibold hover:border-slate-400 transition" %>
        </div>
      </div>

      <%# IMAGE HÉRO = LCP (fetchpriority high, dimensions fixées) %>
      <div class="relative">
        <%= image_tag "sami.jpg",
            alt: "Sami Chabane — Développeur web",
            width: 1600, height: 1200,            # adapte aux vraies dimensions
            fetchpriority: "high",
            decoding: "async",
            class: "w-full h-auto rounded-2xl shadow" %>
      </div>
    </div>
  </div>
</section>

<%# --- PROJETS --- %>
<section id="projects" class="scroll-mt-20 py-16 md:py-24 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Projets</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <%# Exemple carte projet %>
      <article class="rounded-2xl bg-white p-4 shadow-sm border border-slate-200 hover:shadow transition">
        <%= image_tag "projet1.webp",
            alt: "Projet 1 — capture d’écran",
            width: 800, height: 600,
            loading: "lazy", decoding: "async",
            class: "w-full h-auto rounded-xl mb-3" %>
        <h3 class="font-semibold text-lg mb-1">Projet 1</h3>
        <p class="text-sm text-slate-600 mb-3">Bref descriptif du projet, stack, objectifs.</p>
        <div class="flex gap-3">
          <%= link_to "Voir", "#", class: "text-sky-600 hover:underline" %>
          <%= link_to "Code", "#", class: "text-slate-600 hover:underline" %>
        </div>
      </article>

      <article class="rounded-2xl bg-white p-4 shadow-sm border border-slate-200 hover:shadow transition">
        <%= image_tag "projet2.webp",
            alt: "Projet 2 — capture d’écran",
            width: 800, height: 600,
            loading: "lazy", decoding: "async",
            class: "w-full h-auto rounded-xl mb-3" %>
        <h3 class="font-semibold text-lg mb-1">Projet 2</h3>
        <p class="text-sm text-slate-600 mb-3">Bref descriptif du projet, stack, objectifs.</p>
        <div class="flex gap-3">
          <%= link_to "Voir", "#", class: "text-sky-600 hover:underline" %>
          <%= link_to "Code", "#", class: "text-slate-600 hover:underline" %>
        </div>
      </article>

      <article class="rounded-2xl bg-white p-4 shadow-sm border border-slate-200 hover:shadow transition">
        <%= image_tag "projet3.webp",
            alt: "Projet 3 — capture d’écran",
            width: 800, height: 600,
            loading: "lazy", decoding: "async",
            class: "w-full h-auto rounded-xl mb-3" %>
        <h3 class="font-semibold text-lg mb-1">Projet 3</h3>
        <p class="text-sm text-slate-600 mb-3">Bref descriptif du projet, stack, objectifs.</p>
        <div class="flex gap-3">
          <%= link_to "Voir", "#", class: "text-sky-600 hover:underline" %>
          <%= link_to "Code", "#", class: "text-slate-600 hover:underline" %>
        </div>
      </article>
    </div>
  </div>
</section>

<%# --- CERTIFICATIONS --- %>
<section id="certifications" class="scroll-mt-20 py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Certifications</h2>

    <ul class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <li class="rounded-2xl p-4 border border-slate-200 bg-slate-50">Certif 1</li>
      <li class="rounded-2xl p-4 border border-slate-200 bg-slate-50">Certif 2</li>
      <li class="rounded-2xl p-4 border border-slate-200 bg-slate-50">Certif 3</li>
    </ul>
  </div>
</section>

<%# --- PASSIONS --- %>
<section id="passions" class="scroll-mt-20 py-16 md:py-24 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Passions</h2>
    <p class="text-slate-700 max-w-3xl">Un paragraphe court + éventuellement une image lazy.</p>
    <%= image_tag "passion.webp",
        alt: "Passion",
        width: 1200, height: 800,
        loading: "lazy", decoding: "async",
        class: "w-full h-auto rounded-2xl shadow mt-6" %>
