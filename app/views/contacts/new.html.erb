<h2 class="text-2xl md:text-4xl font-bold">Contact</h2>
<p class="mt-4 text-slate-700">Je vous réponds rapidement (souvent le jour même).</p>

<% if notice %>
  <div class="mt-4 rounded-xl bg-emerald-50 text-emerald-700 px-4 py-3"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="mt-4 rounded-xl bg-rose-50 text-rose-700 px-4 py-3"><%= alert %></div>
<% end %>

<%= form_with url: contact_path, method: :post, local: true, class: "mt-8 grid gap-4" do %>
  <div class="grid sm:grid-cols-2 gap-4">
    <input name="name"  placeholder="Votre nom"   class="w-full rounded-xl border border-slate-300 px-4 py-3" />
    <input name="email" placeholder="Votre email" type="email" class="w-full rounded-xl border border-slate-300 px-4 py-3" />
  </div>
  <input name="subject"  placeholder="Sujet" class="w-full rounded-xl border border-slate-300 px-4 py-3" />
  <textarea name="message" placeholder="Votre message" rows="5" class="w-full rounded-xl border border-slate-300 px-4 py-3"></textarea>

  <!-- honeypot -->
  <input type="text" name="website" tabindex="-1" autocomplete="off" class="hidden" />

  <button class="justify-self-center rounded-xl bg-sky-500 px-5 py-3 text-white shadow hover:bg-sky-600">
    Envoyer
  </button>
<% end %>
